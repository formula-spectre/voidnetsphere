 @media (prefers-color-scheme: dark){
     body {color:#fff;background:#000}
a:link {color:#cdf}
a:hover, a:visited:hover {color:#def}
a:visited {color:#dcf}
 }
 body{
     margin:1em auto;
     max-width:40em;
     padding:0 .62em;
     font:1.2em/1.62 sans-serif
 }
 h2,h3 {
     line-height:1.2
 }
 @font-face {font-family LispM; src: url('./media/lispm-monospace.otf');}
 h1 {
     line-height:1.2
     font-family: LispM
 }
 @media print{
     body{
         max-width:none
     }
 }
